@prefix : <http://www.semanticweb.org/merged-requirements#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@base <http://www.semanticweb.org/merged-requirements> .

<http://www.semanticweb.org/merged-requirements> rdf:type owl:Ontology ;
    rdfs:label "Merged Requirements Engineering Ontology"@en ;
    rdfs:comment "Объединенная онтология: Структурная модель требований + INCOSE Guide for Writing Requirements."@ru .

#################################################################
#    Object Properties (Свойства объектов)
#################################################################

###  Структурные связи (из Файла 1)

:isPartOf rdf:type owl:ObjectProperty ;
          rdfs:label "является частью"@ru ;
          rdfs:comment "Описывает отношение включения (Формулировка -> Запись; Требование -> Спецификация)"@ru .

:appliesTo rdf:type owl:ObjectProperty ;
           rdfs:domain :Rule ;
           rdfs:range :RequirementRecord ;
           rdfs:label "применяется к"@ru ;
           rdfs:comment "Правила применяются к записи требования (п.3)"@ru .

:imparts rdf:type owl:ObjectProperty ;
         rdfs:domain :Rule ;
         rdfs:range :Property ;
         rdfs:label "придает"@ru ;
         rdfs:comment "Правила придают свойства (п.4). Родительское свойство для supportsCharacteristic."@ru .

:hasProperty rdf:type owl:ObjectProperty ;
             rdfs:domain :RequirementRecord ;
             rdfs:range :Property ;
             rdfs:label "обладает"@ru ;
             rdfs:comment "Записи требования обладают свойствами (п.5)"@ru .

:transformedInto rdf:type owl:ObjectProperty ;
                 rdfs:label "преобразуется в"@ru ;
                 rdfs:comment "Потребность -> Запись требования; Спецификация -> Сущность"@ru .

:owns rdf:type owl:ObjectProperty ;
      rdfs:domain :Stakeholder ;
      rdfs:range :Need ;
      rdfs:label "владеет"@ru .

:uses rdf:type owl:ObjectProperty ;
      rdfs:domain :Stakeholder ;
      rdfs:range :Entity ;
      rdfs:label "использует"@ru .

:imposedOn rdf:type owl:ObjectProperty ;
           rdfs:domain :Requirement ;
           rdfs:range :Entity ;
           rdfs:label "предъявляется к"@ru .

:satisfies rdf:type owl:ObjectProperty ;
           rdfs:domain :Entity ;
           rdfs:range :Need ;
           rdfs:label "удовлетворяет"@ru .

###  Связи из INCOSE (Файл 2)

:supportsCharacteristic rdf:type owl:ObjectProperty ;
                        rdfs:subPropertyOf :imparts ;
                        rdfs:domain :Rule ;
                        rdfs:range :Characteristic ;
                        rdfs:label "обеспечивает характеристику"@ru ;
                        rdfs:comment "Уточнение свойства 'придает': правило обеспечивает определенную характеристику качества."@ru .

#################################################################
#    Data Properties (Свойства данных - из INCOSE)
#################################################################

:hasRationale rdf:type owl:DatatypeProperty ;
              rdfs:domain :Concept ;
              rdfs:range xsd:string ;
              rdfs:label "Обоснование"@ru .

:hasGuidance rdf:type owl:DatatypeProperty ;
             rdfs:domain :Concept ;
             rdfs:range xsd:string ;
             rdfs:label "Методические указания"@ru .

:hasExample rdf:type owl:DatatypeProperty ;
            rdfs:domain :Concept ;
            rdfs:range xsd:string ;
            rdfs:label "Пример"@ru .

#################################################################
#    Classes (Классы)
#################################################################

### Базовый абстрактный класс INCOSE
:Concept rdf:type owl:Class ;
         rdfs:label "Концепция (INCOSE)"@ru .

### Основные сущности

:RequirementRecord rdf:type owl:Class ;
                   rdfs:subClassOf :Concept ;
                   rdfs:label "Запись требования"@ru ;
                   rdfs:comment "Центральный элемент, к которому применяются правила и который обладает атрибутами."@ru .

:Formulation rdf:type owl:Class ;
             rdfs:subClassOf [ rdf:type owl:Restriction ;
                               owl:onProperty :isPartOf ;
                               owl:someValuesFrom :RequirementRecord
                             ] ;
             rdfs:label "Формулировка"@ru ;
             rdfs:comment "Текстовая часть записи требования."@ru .

:Attribute rdf:type owl:Class ;
           rdfs:subClassOf :Concept ;
           rdfs:subClassOf [ rdf:type owl:Restriction ;
                             owl:onProperty :isPartOf ;
                             owl:someValuesFrom :RequirementRecord
                           ] ;
           rdfs:label "Атрибут"@ru .

:Rule rdf:type owl:Class ;
      rdfs:subClassOf :Concept ;
      rdfs:label "Правило"@ru ;
      rdfs:comment "Инструкция, применяемая к записи требования для придания ей качественных свойств."@ru .

:Property rdf:type owl:Class ;
          rdfs:subClassOf :Concept ;
          rdfs:label "Свойство"@ru ;
          rdfs:comment "Общее свойство записи требования (п.5)."@ru .

:Characteristic rdf:type owl:Class ;
                rdfs:subClassOf :Property ;
                rdfs:label "Характеристика качества"@ru ;
                rdfs:comment "Специфический вид Свойства (Property), описывающий качество требования (C1-C14)."@ru .

:Need rdf:type owl:Class ;
      rdfs:subClassOf [ rdf:type owl:Restriction ;
                        owl:onProperty :transformedInto ;
                        owl:someValuesFrom :RequirementRecord
                      ] ;
      rdfs:label "Потребность"@ru .

:Stakeholder rdf:type owl:Class ;
             rdfs:label "Заинтересованная сторона"@ru .

:Entity rdf:type owl:Class ;
        rdfs:label "Сущность"@ru ;
        rdfs:comment "Система или элемент, к которому предъявляются требования."@ru .

:RequirementSpecification rdf:type owl:Class ;
                          rdfs:subClassOf [ rdf:type owl:Restriction ;
                                            owl:onProperty :transformedInto ;
                                            owl:someValuesFrom :Entity
                                          ] ;
                          rdfs:label "Спецификация требований"@ru .

:Requirement rdf:type owl:Class ;
             rdfs:subClassOf [ rdf:type owl:Restriction ;
                               owl:onProperty :isPartOf ;
                               owl:someValuesFrom :RequirementSpecification
                             ] ;
             rdfs:label "Требование (абстракция)"@ru .

#################################################################
#    Individuals: Characteristics (Характеристики C1-C14)
#################################################################

